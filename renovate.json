{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "timezone": "Europe/Berlin",
    "packageRules": [
      {
        "matchManagers": ["dockerfile"],
        "enabled": true,
        "automerge": true
      },
      {
        "matchPackagePatterns": ["^github\\.actions"],
        "enabled": true,
        "automerge": true
      }
    ]
  }
  